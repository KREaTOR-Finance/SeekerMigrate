{
  "version": 2,
  "builds": [
    {
      "src": "site/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["api/**"]
      }
    },
    {
      "src": "src/server/telegram/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/webhook$",
      "dest": "src/server/telegram/index.ts"
    },
    {
      "src": "/api$",
      "dest": "api/index.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/index.ts?path=$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "site/index.html"
    }
  ]
}

